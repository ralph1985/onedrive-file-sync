# Local absolute path to the file you want to sync
LOCAL_FILE_PATH=

# OneDrive path (relative to the app folder), e.g. data/mi.txt
ONEDRIVE_FILE_PATH=

# Microsoft Graph app registration (personal OneDrive uses consumers tenant)
CLIENT_ID=
TENANT_ID=consumers

# Redirect URI configured for your app (e.g. http://localhost:53682)
REDIRECT_URI=

